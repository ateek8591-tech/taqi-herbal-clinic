{
  "name": "taqi-herbal-clinic",
  "version": "1.0.0",
  "private": true,
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron-dev": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.taqiherbalclinic.app",
    "productName": "TAQI Herbal Clinic",
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/icon.*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "directories": { "buildResources": "public" }
  }
